#!/usr/bin/env bash

kill_apps() {
    while read -r app; do
        wmctrl -i -c "$app"
    done < <(wmctrl -l | awk '{print $1}')
}

choice=$(echo -e "Lock\nLogout\nReboot\nShutdown" | dmenu -i | cut -d ':' -f 1)

case "$choice" in
    Lock)
        i3lock --color=285577
        ;;
    Logout)
        kill_apps
        kill $(pgrep X) &
        ;;
    Reboot)
        kill_apps
        systemctl reboot
        ;;
    Shutdown)
        kill_apps
        systemctl -i poweroff
        ;;
    *)
        exit 1
        ;;
esac
