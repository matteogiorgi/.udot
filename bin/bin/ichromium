#!/usr/bin/env bash

CHOICE=$(echo -e "Startpage\nNotewiki\nHOME\nIncognito" | dmenu -i -b | cut -d ':' -f 1)
case "$CHOICE" in
    Startpage)
        COMMAND="chromium --new-window https://www.geoteo.net/start"
        ;;
    Notewiki)
        COMMAND="chromium --new-window $HOME/notewiki/pandoc/index.html"
        ;;
    HOME)
        COMMAND="chromium --new-window $HOME"
        ;;
    Incognito)
        COMMAND="chromium --new-window -incognito"
        ;;
    *)
        COMMAND="__no_command__"
        ;;
esac

[[ -x "$(command -v ${COMMAND%% *})" ]] && $COMMAND || exit 1
