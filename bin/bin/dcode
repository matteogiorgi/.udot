#!/usr/bin/env bash

if [[ -x "$(command -v code)" ]]; then
    NAMES="VSCode\nHOME"$NAMES; CODE="code"
elif [[ -x "$(command -v codium)" ]]; then
    NAMES="VSCodium\nHOME"$NAMES; CODE="codium"
fi

if [[ ! -n $NAMES ]]; then
    dmenu_run -i -b
    exit 0
fi

CHOICE=$(echo -e "$NAMES" | dmenu -i -b | cut -d ':' -f 1)
case "$CHOICE" in
    VSCode)
        code
        ;;
    VSCodium)
        codium
        ;;
    HOME)
        $CODE $HOME
        ;;
    *)
        exit 1
        ;;
esac
