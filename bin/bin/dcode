#!/usr/bin/env bash

if [[ -x "$(command -v code)" ]]; then
    COMMAND="code"; CODE="VSCode"
elif [[ -x "$(command -v codium)" ]]; then
    COMMAND="codium"; CODE="VSCodium"
else
    dmenu_run -i -b
    exit 0
fi

CHOICE=$(echo -e "$CODE\nBlank\nHOME" | dmenu -i -b | cut -d ':' -f 1)
case "$CHOICE" in
    $CODE)
        $COMMAND
        ;;
    Blank)
        $COMMAND --new-window
        ;;
    HOME)
        $COMMAND $HOME
        ;;
    *)
        exit 1
        ;;
esac
