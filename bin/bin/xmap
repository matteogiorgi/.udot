#!/usr/bin/env bash

# the following lines sets CapsLock as a second
# Super key and as Escape on a single key-press


if [[ -x "$(command -v xmodmap)" ]]; then
    xmodmap -e 'remove Lock = Caps_Lock'  # clear Lock
    xmodmap -e 'keysym Caps_Lock = Super_L'
    xmodmap -e 'add mod4 = Super_L'
    xmodmap -e 'keycode 66 = Escape'
fi
