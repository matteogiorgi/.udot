#!/usr/bin/env bash

[[ -x "$(command -v geany)" ]] && NAMES="Geany\n"$NAMES
[[ -x "$(command -v emacs)" ]] && NAMES="Emacs\n"$NAMES
[[ -x "$(command -v codium)" ]] && NAMES="VSCodium\n"$NAMES
[[ -x "$(command -v code)" ]] && NAMES="VSCode\n"$NAMES

if [[ ! -n $NAMES ]]; then
    dmenu_run -i -b
    exit 0
fi

CHOICE=$(echo -e "$NAMES" | dmenu -i -b | cut -d ':' -f 1)
case "$CHOICE" in
    VSCode)
        code
        ;;
    VSCodium)
        codium
        ;;
    Emacs)
        emacs
        ;;
    Geany)
        geany
        ;;
    *)
        exit 1
        ;;
esac
