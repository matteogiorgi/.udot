#!/usr/bin/env bash


RED='\033[1;36m'
YLW='\033[1;35m'
NC='\033[0m'

printf "${RED}%s ${YLW}%s ${RED}%s${NC}\n" "Resetting" "Kupfer" "to defaults"

cat 2>/dev/null > $HOME/.config/kupfer/kupfer.cfg <<-EOF
[Kupfer]
showstatusicon = False

[Tools]
terminal = kupfer.plugin.core.lxterminal

[plugin_applications]
desktop_type = 
kupfer_toplevel_appsource = True

[plugin_archivemanager]
kupfer_enabled = False

[plugin_calculator]
kupfer_enabled = False

[plugin_clipboard]
kupfer_enabled = False
kupfer_toplevel_clipboardsource = True

[plugin_commands]
kupfer_enabled = False

[plugin_dictionary]
kupfer_enabled = False

[plugin_documents]
kupfer_enabled = False
kupfer_toplevel_placessource = True
kupfer_toplevel_recentssource = True

[plugin_favorites]
kupfer_toplevel_favoritessource = True

[plugin_qsicons]
kupfer_enabled = False

[plugin_show_text]
kupfer_enabled = False

[plugin_triggers]
kupfer_enabled = False
kupfer_toplevel_triggers = True

[plugin_urlactions]
kupfer_enabled = False

[plugin_volumes]
kupfer_enabled = False
kupfer_toplevel_volumessource = True

[plugin_wikipedia]
kupfer_enabled = False
EOF

