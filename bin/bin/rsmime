#!/usr/bin/env bash

# check the relative mime-type here:
# https://www.iana.org/assignments/media-types/media-types.xhtml


RED='\033[1;36m'
YLW='\033[1;35m'
NC='\033[0m'


read -p "WARNING: mimeapps.list will be overridden (enter to continue)"
printf "${RED}%s ${YLW}%s ${RED}%s${NC}\n" "Resetting" "mimeapps.list" "to defaults"

cat 2>/dev/null > $HOME/.config/mimeapps.list <<-EOF
[Default Applications]
audio/*=vlc.desktop
video/*=vlc.desktop
image/*=org.gnome.eog.desktop
text/*=org.gnome.gedit.desktop
inode/directory=org.gnome.Nautilus.desktop
application/pdf=org.gnome.Evince.desktop
application/postscript=org.gnome.Evince.desktop
application/djvu=org.gnome.Evince.desktop
application/x-tar=org.gnome.FileRoller.desktop
application/zip=org.gnome.FileRoller.desktop
application/gzip=org.gnome.FileRoller.desktop
EOF
