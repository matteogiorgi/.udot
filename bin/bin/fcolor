#!/usr/bin/env bash

# This script lists possible color temperatures and uses fzf
# to select one to be used as screen temperature.
# It is intended to be used as such: $TERMINAL -T __fsmall__ -e fcolor


[[ -x "$(command -v sct)" ]] || exit 1

RANGE="3500      ## Ghibli\n4500      ## Campfire\n5500      ## Scirocco\n6500      ## Midday\n7500      ## Mistral\n8500      ## Chilly\n9500      ## Icy\n"
TEMPE=$(printf "$RANGE" | fzf --prompt='fcolor > ' --height 100% --margin 0% --reverse --info=hidden --header-first)
[[ -n "$TEMPE" ]] && sct "$TEMPE" || exit 1
