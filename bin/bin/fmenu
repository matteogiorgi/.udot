#! /usr/bin/env bash


[[ -f ~/.bash_functions ]] && . ~/.bash_functions || exit 1

CMD=$(ls -1 $(echo $PATH | tr ':' ' ') 2>/dev/null | sort -u | sed '/^$/d' | sed '/^\[/d' | sed '/^\//d' | fzf --prompt='fmenu > ' --height 100% --margin 0% --reverse --info=hidden --header-first)
[[ -n "$CMD" ]] && _xshow "$CMD" || exit 1
