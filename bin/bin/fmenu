#! /usr/bin/env bash


[[ -f ~/.bash_functions ]] && . ~/.bash_functions || exit 1
if CMD=$(ls -1 $(echo $PATH | tr ':' ' ') 2>/dev/null | sort -u | sed '1,2d' | fzf --prompt='fmenu > ' --height 100% --margin 0% --reverse --info=hidden --header-first); then
    [[ -n "$CMD" ]] && _xshow "$CMD" || exit 1
fi
