#!/usr/bin/env bash

[[ ! -x "$(command -v sct)" ]] && exit 1
[[ ! -f ~/.xtemp ]] && printf "#!/bin/sh\nsct 6500\n" > ~/.xtemp

TEMP=$(awk 'FNR==2 {print $2}' ~/.xtemp)

if [[ $* == "" ]]; then
    printf "#!/bin/sh\nsct 6500\n" > ~/.xtemp
elif [[ $* == -1 && $TEMP -gt 3500 ]]; then
    ((TEMP-=500))
    printf "#!/bin/sh\nsct $TEMP\n" > ~/.xtemp
elif [[ $* == +1 && $TEMP -lt 9500 ]]; then
    ((TEMP+=500))
    printf "#!/bin/sh\nsct $TEMP\n" > ~/.xtemp
fi

chmod 755 ~/.xtemp
~/.xtemp
xsetroot -cursor_name arrow
