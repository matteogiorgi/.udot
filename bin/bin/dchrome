#!/usr/bin/env bash

if [[ -x "$(command -v brave)" ]]; then
    COMMAND="brave"; BROWSER="Brave"
elif [[ -x "$(command -v google-chrome)" ]]; then
    COMMAND="google-chrome"; BROWSER="Chrome"
elif [[ -x "$(command -v chromium)" ]]; then
    COMMAND="chromium"; BROWSER="Chromium"
else
    dmenu_run -i -b
    exit 0
fi

CHOICE=$(echo -e "$BROWSER\nStartpage\nNotewiki\nHOME\nIncognito" | dmenu -i -b | cut -d ':' -f 1)
case "$CHOICE" in
    $BROWSER)
        $COMMAND
        ;;
    Startpage)
        $COMMAND --new-window https://www.geoteo.net/start
        ;;
    Notewiki)
        $COMMAND --new-window $HOME/notewiki/pandoc/index.html
        ;;
    HOME)
        $COMMAND --new-window $HOME
        ;;
    Incognito)
        $COMMAND --new-window -incognito
        ;;
    *)
        exit 1
        ;;
esac
