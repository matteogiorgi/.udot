#!/usr/bin/env bash

# this function close every window controlled by
# the window-manager (to be used befor a Logout)
kill_apps() {
    while read -r app; do
        wmctrl -i -c "$app"
    done < <(wmctrl -l | awk '{print $1}')
}

CHOICE=$(echo -e "Lock\nLogout\nReboot\nShutdown" | dmenu -i -b | cut -d ':' -f 1)
case "$CHOICE" in
    Lock)
        slock
        ;;
    Logout)
        kill_apps
        killall i3  # kill $(pgrep X) &
        ;;
    Reboot)
        kill_apps
        systemctl reboot
        ;;
    Shutdown)
        kill_apps
        systemctl -i poweroff
        ;;
    *)
        exit 1
        ;;
esac
