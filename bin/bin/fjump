#!/usr/bin/env bash

CLICOLOR_FORCE=1
OPENER="swallow"
LIST="/bin/ls -a --ignore="." --ignore=".git" --group-directories-first --color=always"

[[ -f ~/.git-prompt.sh ]] && source ~/.git-prompt.sh

function main () {
    while true
    do
        printf '%s\n' "$PWD" >~/.fjump.tmp
        [[ $(type -t __git_ps1) == function ]] && GIT_BRANCH=$(__git_ps1 " (%s)") || GIT_BRANCH=""
        FILE="$(${LIST} | fzf --ansi --preview 'mess {}' --preview-window 'right,70%,border-left' `
                `--bind ctrl-d:preview-half-page-down,ctrl-u:preview-half-page-up --prompt="$PWD$GIT_BRANCH > " `
                `--height 100% --reverse --info=hidden --header-first)"
        [[ -z "$FILE" ]] && exit 0
        [[ -d "$FILE" || (-d "$FILE" && -L "$FILE") ]] && cd "${FILE}" || "${OPENER:="${EDITOR:=/bin/vi}"}" "${FILE}"
    done
}

main
