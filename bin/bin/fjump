#!/usr/bin/env bash

CLICOLOR_FORCE=1
OPENER="swallow"

function main () {
    while true
    do
        printf '%s\n' "$PWD" >~/.fjump.tmp
        FILE="$(/bin/ls --color -Ga | fzf --ansi --preview 'mess {}' --preview-window 'right,60%,border-left' --bind ctrl-d:preview-half-page-down,ctrl-u:preview-half-page-up --prompt="$PWD >> " --border=rounded --margin=5% --color=dark --height 100% --reverse --info=hidden --header-first)" 
        [[ -z "$FILE" ]] && exit 0
        [[ -d "$FILE" || (-d "$FILE" && -L "$FILE") ]] && cd "${FILE}" || "${OPENER:="${EDITOR:=vi}"}" "${FILE}"
    done
}

main
