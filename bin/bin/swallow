#!/usr/bin/env bash


### Functions definition
########################

if [ -f ~/.bash_functions ]; then
    . ~/.bash_functions
fi




### Greppers
############

echo "$*" | grep "\.ar\." && {
    _xhide xterm -e "${EDITOR:=vi}" "$*" &
    exit
}

echo "$1" | grep "\.sent$" && {
    _xhide sent "$1" &
    exit
}




### MIME-type opener (inode/directory not necessary)
####################################################

FILE="$*"
case $(file --mime-type "$FILE" -bL) in
    audio/*)
        _mpv "$FILE"
        ;;
    video/*)
        _xhide "mpv --force-window '$FILE'"
        ;;
    application/pdf | application/postscript | application/djvu | image/vnd.djvu | application/epub+zip)
        _xhide "zathura '$FILE'"
        ;;
    image/*)
        _xhide "esxiv '$FILE'"
        ;;
    *)
        case $(printf "vim\nkakoune\nsam\n" | fzf --prompt="Edit ${FILE##*/} with: " --margin=5% --color=dark --height 100% --reverse --info=hidden --header-first) in
            # to know if you are inside a tmux session just check TMUX variable:
            # [[ -n "${TMUX}" ]] && tmux new-window kak "$FILE" || kak "$FILE"
            vim)
                _vim "$FILE"
                ;;
            kakoune)
                kak "$FILE"
                ;;
            sam)
                sim "$FILE"
        esac
esac
