#!/usr/bin/env bash


### Variables definition
########################

FILE="$*"




### Functions definition
########################

# shell-commands are supposed to launch (detached) gui programs
# shell-functions are instead supposed to launch terminal programs

[[ -f ~/.bash_functions ]] && . ~/.bash_functions || exit 1

function _run () {
    if [[ -x "$(command -v $1)" ]]; then
        _xshow "$1 '${FILE}'"
    elif [[ "$(type -t $1)" == function ]]; then
        $1 "${FILE}"
    else
        _xshow "xdg-open '${FILE}'"
    fi
}




### Greppers
############

echo "$*" | grep "\.ar\." && {
    _xhide xterm -e "${EDITOR:=vi}" "$*" &
    exit
}

echo "$1" | grep "\.sent$" && {
    _xhide sent "$1" &
    exit
}




### MIME-type opener (inode/directory not necessary)
####################################################

# Check the relative mime-type here:
# https://www.iana.org/assignments/media-types/media-types.xhtml
case $(file --mime-type "${FILE}" -bL) in
    audio/*)
        _run "_mpv"
        ;;
    video/*)
        _run "mpv --force-window --no-terminal --msg-level=all=no"
        ;;
    application/pdf | application/postscript | application/djvu | image/vnd.djvu | application/epub+zip)
        _run "zathura"
        ;;
    image/*)
        _run "esxiv"
        ;;
    text/* | application/json)
        # "${EDITOR:=vi}" "$@"
        _run "_vim"
        ;;
    *)
        _run ""
esac
