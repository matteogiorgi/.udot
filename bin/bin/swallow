#!/usr/bin/env bash


### Variables definition
########################

FILE="$*"
[[ -x "$(command -v nano)" ]] && NAMES="η-Nano\n"$NAMES
[[ -x "$(command -v kak)" ]] && NAMES="Kakoune\n"$NAMES
[[ -x "$(command -v vim)" ]] && NAMES="Vim-COC\nVim-FZF\n"$NAMES




### Functions definition
########################

if [ -f ~/.bash_functions ]; then
    . ~/.bash_functions
fi

function _run () {
    CMD="$1"
    FILE="$2"
    if [[ -x "$(command -v $CMD)" ]]; then
        _xshow "$CMD '${FILE}'"
    else
        _xshow "xdg-open '${FILE}'"
    fi
}




### Greppers
############

echo "$*" | grep "\.ar\." && {
    _xhide xterm -e "${EDITOR:=vi}" "$*" &
    exit
}

echo "$1" | grep "\.sent$" && {
    _xhide sent "$1" &
    exit
}




### MIME-type opener (inode/directory not necessary)
####################################################

# check the relative mime-type here:
# https://www.iana.org/assignments/media-types/media-types.xhtml
case $(file --mime-type "${FILE}" -bL) in
    audio/*)
        if [[ -x "$(command -v mpv)" && "$(type -t _mpv)" == function ]]; then
            clear &&
            _mpv "${FILE}"
        else
            _run "(ツ)" "${FILE}"
        fi
        ;;
    video/*)
        _run "mpv --force-window --no-terminal --msg-level=all=no" "${FILE}"
        ;;
    application/pdf | application/postscript | application/djvu | image/vnd.djvu | application/epub+zip)
        _run "zathura" "${FILE}"
        ;;
     application/vnd.openxmlformats-officedocument.* | application/vnd.oasis.opendocument.* | application/vnd.ms-* | application/msword)
        _run "libreoffice" "${FILE}"
        ;;
     application/x-tar | application/zip | application/gzip)
        if [[ "${FILE##*.}" == "xopp" ]]; then
            _run "xournalpp" "${FILE}"
        elif [[ "${FILE##*.}" == "ora" ]]; then
            _run "mypaint" "${FILE}"
        else
            _run "(ツ)" "${FILE}"
        fi
        ;;
    image/*)
        _run "esxiv" "${FILE}"
        ;;
    *)
        if [[ ! -n $NAMES  || ! -f "/bin/fzf" ]]; then
            "${EDITOR:=vi}" "${FILE}"
            exit 0
        fi
        case $(printf "$NAMES" | fzf --prompt="Edit ${FILE##*/} with: " --height 100% --reverse --info=hidden --header-first) in
            Vim-COC)
                if [[ -x "$(command -v nvim)" && "$(type -t _nvim_cocmode)" == function ]]; then
                    _nvim_cocmode "${FILE}"
                elif [[ -x "$(command -v vim)" && "$(type -t _vim_cocmode)" == function ]]; then
                    _vim_cocmode "${FILE}"
                else
                    _run "(ツ)" "${FILE}"
                fi
                ;;
            Vim-FZF)
                if [[ -x "$(command -v nvim)" && "$(type -t _nvim)" == function ]]; then
                    _nvim "${FILE}"
                elif [[ -x "$(command -v vim)" && "$(type -t _vim)" == function ]]; then
                    _vim "${FILE}"
                else
                    _run "(ツ)" "${FILE}"
                fi
                ;;
            Kakoune)
                [[ -x "$(command -v kak)" ]] && kak "${FILE}" || _run "(ツ)" "${FILE}"
                ;;
            η-Nano)
                [[ -x "$(command -v nano)" ]] && nano "${FILE}" || _run "(ツ)" "${FILE}"
                ;;
            *)
                exit 1
        esac
esac
