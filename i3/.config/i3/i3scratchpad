#!/usr/bin/env bash

# This script spawns an scratchpad as long as i3 is running.
# It is very usefull if you want a terminal scratchpad always available.


while pgrep -x "i3"; do
    st -n scratchpad -e tmux &
    wait $!
done

# I usually have the following lines in my i3 config file
# to make this script work properly:
#
#     for_window [instance="scratchpad"] floating enable
#     for_window [instance="scratchpad"] resize set 800 600
#     for_window [instance="scratchpad"] move scratchpad
#     bindsym $mod+Shift+Return [instance="scratchpad"] scratchpad show; [instance="scratchpad"] move position center
