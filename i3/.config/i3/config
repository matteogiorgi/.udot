### Bind programs to workspaces (use xprop)
###########################################

assign [class="SimpleScreenRecorder"] $ws10




### Scratchpads
###############

for_window [instance="SCRATCHPAD"] floating enable
for_window [instance="SCRATCHPAD"] resize set 800 600
for_window [instance="SCRATCHPAD"] move position center

for_window [title="SCRATCHPAD"] floating enable
for_window [title="SCRATCHPAD"] resize set 800 600
for_window [title="SCRATCHPAD"] move position center




### Usefull binds
#################

# terminal
bindsym $mod+Return exec "i3-sensible-terminal"
bindsym $mod+shift+Return exec "i3-sensible-terminal -T SCRATCHPAD"

# focus
bindsym $mod+space focus parent
bindsym $mod+Shift+space focus child

# scratchpad
bindsym $mod+i scratchpad show
bindsym $mod+Shift+i move scratchpad

# floating, fullscreen
bindsym $mod+d focus mode_toggle
bindsym $mod+f floating toggle
bindsym $mod+g fullscreen toggle

# modes
bindsym $mod+r mode "Resize"

# extra
bindsym $mod+y exec "diodon"
bindsym $mod+u exec "flameshot gui"




### Autoload confs
##################

exec --no-startup-id "~/.config/i3/i3autoload"
