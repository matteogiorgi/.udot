### I3 CONF
###########

# To replicate i3 vanilla conf, delete
# this file and re-run i3-config-wizard(1);
# or just copy the defaults at /etc/i3/config

# For a complete reference, go to
# https://i3wm.org/docs/userguide.html




### Mod-key (Mod1=Alt/Mod4=Sup), font
#####################################

set $mod Mod4
floating_modifier $mod
font pango:Ubuntu Mono 9




### PulseAudio
##############

set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status




### Change/move focus
#####################

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

set $winmove 30px
bindsym $mod+Shift+h move left $winmove
bindsym $mod+Shift+j move down $winmove
bindsym $mod+Shift+k move up $winmove
bindsym $mod+Shift+l move right $winmove

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right




### split, layout, mode
#######################

bindsym $mod+v split v
bindsym $mod+b split h

bindsym $mod+q layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+s focus child




### Workspaces
##############

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Tab workspace next
bindsym $mod+BackSpace workspace prev

bindsym $mod+Shift+Tab move container to workspace next
bindsym $mod+Shift+BackSpace move container to workspace prev




### Bind programs (use xprop)
#############################

assign [class="Google-chrome"] $ws1
assign [class="Chromium"] $ws1
assign [class="Code"] $ws10
assign [class="VSCodium"] $ws10




### Resize window
#################

mode "resize" {
    bindsym h resize shrink width 30 px or 10 ppt
    bindsym j resize grow height 30 px or 10 ppt
    bindsym k resize shrink height 30 px or 10 ppt
    bindsym l resize grow width 30 px or 10 ppt

    bindsym Left resize shrink width 30 px or 10 ppt
    bindsym Down resize grow height 30 px or 10 ppt
    bindsym Up resize shrink height 30 px or 10 ppt
    bindsym Right resize grow width 30 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Caps_Lock mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"




### Adjust temperature
######################

mode "temperature" {
    bindsym 0 exec "xtemp -0"
    bindsym j exec "xtemp -1"
    bindsym k exec "xtemp +1"

    bindsym 0 exec "xtemp -0"
    bindsym Down exec "xtemp -1"
    bindsym Up exec "xtemp +1"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Caps_Lock mode "default"
    bindsym $mod+t mode "default"
}

bindsym $mod+t mode "temperature"




### reload, restart, exit
#########################

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"




### Borders (normal, none, pixel)
### Edges   (none, vertical, horizontal, both, smart)
### Style   (default, stacking, tabbed)
#####################################################

default_border normal
default_floating_border normal
hide_edge_borders none
workspace_layout tabbed




### i3wm colors (border, background, text, indicator, child_border)
###################################################################

client.focused          #4c7899 #285577 #ffffff #2e9ef4 #285577
client.focused_inactive #333333 #5f676a #ffffff #484e50 #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e #222222
client.urgent           #2f343a #900000 #ffffff #900000 #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000 #0c0c0c

client.background       #e5e5e5




### Start i3bar
###############

bar {
    colors {
        background #111111
        statusline #111111
        separator  #333333
    }
    font pango:Ubuntu Mono 9
    position bottom
    separator_symbol "â€‹"
    tray_output primary
    status_command i3status
}




### Scratchpads
###############

for_window [instance="scratchpad"] floating enable
for_window [instance="scratchpad"] resize set 800 600
for_window [instance="scratchpad"] move scratchpad




### Usefull binds
#################

bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Shift+Return [instance="scratchpad"] scratchpad show; [instance="scratchpad"] move position center
bindsym $mod+Shift+q kill

bindsym $mod+m move workspace to output next
bindsym $mod+d exec --no-startup-id "dmenu_run -i -b"
bindsym $mod+u exec "dlogout"
bindsym $mod+i exec "dchrome"
bindsym $mod+o exec "dcode"
bindsym $mod+n exec "nxbg"
bindsym $mod+p exec "nxbg --prev"




### Autoload confs
##################

exec --no-startup-id "~/.config/i3/i3autoload"
exec --no-startup-id "~/.config/i3/i3scratchpad"
