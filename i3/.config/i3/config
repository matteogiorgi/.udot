### Bind programs to workspaces (use xprop)
###########################################

assign [class="SimpleScreenRecorder"] $ws9
assign [class="Ferdium"] $ws10




### Scratchpads
###############

for_window [instance="scratchpad"] floating enable
for_window [instance="scratchpad"] resize set 800 600
for_window [instance="scratchpad"] move position center

for_window [instance="fuzzy-scratchpad"] floating enable
for_window [instance="fuzzy-scratchpad"] resize set 800 600
for_window [instance="fuzzy-scratchpad"] move position center
for_window [instance="fuzzy-scratchpad"] border pixel 2




